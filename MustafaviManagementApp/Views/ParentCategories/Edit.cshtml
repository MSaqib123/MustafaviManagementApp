@model MedicineStore.Models.ParentCategory
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit Category</h2>
<form asp-action="Edit" method="post">
    <input hidden asp-for="ParentCategoryId"/>
    <div class="mb-3">
        <label asp-for="ParentCategoryName" class="form-label"></label>
        <input asp-for="ParentCategoryName" class="form-control" />
        <span asp-validation-for="ParentCategoryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
