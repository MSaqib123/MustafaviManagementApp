@model MedicineStore.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<h4>Are you sure you want to delete this supplier?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.SupplierName</dd>

        <dt class="col-sm-2">Contact Person</dt>
        <dd class="col-sm-10">@Model.ContactPerson</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.Store?.StoreName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SupplierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
