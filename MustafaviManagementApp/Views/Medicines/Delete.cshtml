@model MedicineStore.Models.Medicine
@{
    ViewData["Title"] = "Delete Medicine";
}

<h2>Delete Medicine</h2>

<h4>Are you sure you want to delete this?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.MedicineName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.Store?.StoreName</dd>

        <dt class="col-sm-2">Price Type</dt>
        <dd class="col-sm-10">@Model.PriceType</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MedicineId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
