@model MedicineStore.Models.Medicine
@{
    ViewData["Title"] = "Medicine Details";
}

<h2>Medicine Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.MedicineName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.Store?.StoreName</dd>

        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Dosage Form</dt>
        <dd class="col-sm-10">@Model.DosageForm</dd>

        <dt class="col-sm-2">Strength</dt>
        <dd class="col-sm-10">@Model.Strength</dd>

        <dt class="col-sm-2">Reorder Level</dt>
        <dd class="col-sm-10">@Model.ReorderLevel</dd>

        <dt class="col-sm-2">Price Type</dt>
        <dd class="col-sm-10">@Model.PriceType</dd>

        <dt class="col-sm-2">Single Unit Price</dt>
        <dd class="col-sm-10">@Model.SingleUnitPrice?.ToString("F2")</dd>

        <dt class="col-sm-2">Cotan Unit Price</dt>
        <dd class="col-sm-10">@Model.CotanUnitPrice?.ToString("F2")</dd>

        <dt class="col-sm-2">Cotan Unit Size</dt>
        <dd class="col-sm-10">@Model.CotanUnitSize</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.MedicineId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</p>
