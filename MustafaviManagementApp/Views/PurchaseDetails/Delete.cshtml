@model MedicineStore.Models.PurchaseDetail
@{
    ViewData["Title"] = "Delete Purchase Detail";
}

<h2>Delete Purchase Detail</h2>

<h4>Are you sure you want to delete this purchase detail?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PurchaseDetailId</dd>

        <dt class="col-sm-2">Purchase</dt>
        <dd class="col-sm-10">@Model.Purchase?.PurchaseId</dd>

        <dt class="col-sm-2">Medicine</dt>
        <dd class="col-sm-10">@Model.Medicine?.MedicineName</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Cost Price</dt>
        <dd class="col-sm-10">@Model.CostPrice.ToString("F2")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PurchaseDetailId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
