@model MedicineStore.Models.PurchaseDetail
@{
    ViewData["Title"] = "Edit Purchase Detail";
}

<h2>Edit Purchase Detail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PurchaseDetailId" />
    <div class="form-group">
        <label asp-for="PurchaseId">Purchase</label>
        <select asp-for="PurchaseId" class="form-control"
                asp-items="@(ViewBag.Purchases as SelectList)">
            <option value="">-- Select Purchase --</option>
        </select>
        <span asp-validation-for="PurchaseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MedicineId">Medicine</label>
        <select asp-for="MedicineId" class="form-control"
                asp-items="@(ViewBag.Medicines as SelectList)">
            <option value="">-- Select Medicine --</option>
        </select>
        <span asp-validation-for="MedicineId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BatchNumber"></label>
        <input asp-for="BatchNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpiryDate"></label>
        <input asp-for="ExpiryDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CostPrice"></label>
        <input asp-for="CostPrice" class="form-control" />
        <span asp-validation-for="CostPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount"></label>
        <input asp-for="Discount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
