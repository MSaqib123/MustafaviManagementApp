@model MedicineStore.Models.Prescription
@{
    ViewData["Title"] = "Prescription Details";
}

<h2>Prescription Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PrescriptionId</dd>

        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@Model.Sale?.SaleId</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.DoctorName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.PrescriptionDate.ToString("g")</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.AdditionalNotes</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</p>
