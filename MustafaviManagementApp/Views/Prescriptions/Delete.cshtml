@model MedicineStore.Models.Prescription
@{
    ViewData["Title"] = "Delete Prescription";
}

<h2>Delete Prescription</h2>

<h4>Are you sure you want to delete this prescription?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PrescriptionId</dd>

        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@Model.Sale?.SaleId</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.DoctorName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.PrescriptionDate.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PrescriptionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
