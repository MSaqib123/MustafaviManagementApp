@model MedicineStore.Models.Prescription
@{
    ViewData["Title"] = "Edit Prescription";
}

<h2>Edit Prescription</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PrescriptionId" />
    <div class="form-group">
        <label asp-for="SaleId">Sale</label>
        <select asp-for="SaleId" class="form-control"
                asp-items="@(ViewBag.Sales as SelectList)">
            <option value="">-- Select Sale --</option>
        </select>
        <span asp-validation-for="SaleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorName"></label>
        <input asp-for="DoctorName" class="form-control" />
        <span asp-validation-for="DoctorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrescriptionDate"></label>
        <input asp-for="PrescriptionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalNotes"></label>
        <textarea asp-for="AdditionalNotes" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
