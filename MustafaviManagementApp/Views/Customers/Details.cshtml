@model MedicineStore.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Membership ID</dt>
        <dd class="col-sm-10">@Model.MembershipId</dd>

        <dt class="col-sm-2">Loyalty Points</dt>
        <dd class="col-sm-10">@Model.LoyaltyPoints</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.Store?.StoreName</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</p>
