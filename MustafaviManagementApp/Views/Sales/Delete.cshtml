@model MedicineStore.Models.Sale
@{
    ViewData["Title"] = "Delete Sale";
}

<h2>Delete Sale</h2>

<h4>Are you sure you want to delete this sale?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Sale Id</dt>
        <dd class="col-sm-10">@Model.SaleId</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.CustomerName ?? "Walk-in"</dd>

        <dt class="col-sm-2">Staff</dt>
        <dd class="col-sm-10">@Model.Staff.StaffName</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("F2")</dd>

        <dt class="col-sm-2">Payment Status</dt>
        <dd class="col-sm-10">@Model.PaymentStatus</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SaleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
