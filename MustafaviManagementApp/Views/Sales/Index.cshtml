@model IEnumerable<MedicineStore.Models.Sale>
@{
    ViewData["Title"] = "Sales";
}

<h2>Sales</h2>

<p>
    @* <a asp-action="Create" class="btn btn-primary">Create New Sale</a> *@
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().SaleId)</th>
            <th>@Html.DisplayNameFor(m => m.First().Customer.CustomerName)</th>
            <th>@Html.DisplayNameFor(m => m.First().Staff.StaffName)</th>
            <th>@Html.DisplayNameFor(m => m.First().SaleDate)</th>
            <th>@Html.DisplayNameFor(m => m.First().TotalAmount)</th>
            <th>@Html.DisplayNameFor(m => m.First().PaymentStatus)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>#@sale.SaleId</td>
                <td>@sale.Customer?.CustomerName</td>
                <td>@sale.Staff.StaffName</td>
                <td>@sale.SaleDate.ToString("g")</td>
                <td>@sale.TotalAmount.ToString("F2")</td>
                <td>@sale.PaymentStatus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sale.SaleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@sale.SaleId">Details</a> |
                    @* <a asp-action="Delete" asp-route-id="@sale.SaleId">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
