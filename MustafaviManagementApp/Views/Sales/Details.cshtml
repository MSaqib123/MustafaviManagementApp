@model MedicineStore.Models.Sale
@{
    ViewData["Title"] = "Sale Details";
}

<h2>Sale Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Sale Id</dt>
        <dd class="col-sm-10">@Model.SaleId</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.CustomerName ?? "Walk-in"</dd>

        <dt class="col-sm-2">Staff</dt>
        <dd class="col-sm-10">@Model.Staff.StaffName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.SaleDate.ToString("g")</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("F2")</dd>

        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.Discount.ToString("F2")</dd>

        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>

        <dt class="col-sm-2">Payment Status</dt>
        <dd class="col-sm-10">@Model.PaymentStatus</dd>
    </dl>
    @* …your existing <form>…</form> *@

    @* embed all the line‐items for this sale: *@
    @await Component.InvokeAsync("SaleDetails", new { saleId = Model.SaleId })

</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.SaleId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</p>
