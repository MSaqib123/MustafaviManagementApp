@model MedicineStore.Models.Inventory
@{
    ViewData["Title"] = "Inventory Details";
}

<h2>Inventory Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.InventoryId</dd>

        <dt class="col-sm-2">Medicine</dt>
        <dd class="col-sm-10">@Model.Medicine?.MedicineName</dd>

        <dt class="col-sm-2">Batch Number</dt>
        <dd class="col-sm-10">@Model.BatchNumber</dd>

        <dt class="col-sm-2">Expiry Date</dt>
        <dd class="col-sm-10">@Model.ExpiryDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Quantity On Hand</dt>
        <dd class="col-sm-10">@Model.QuantityOnHand</dd>

        <dt class="col-sm-2">Location In Store</dt>
        <dd class="col-sm-10">@Model.LocationInStore</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt?.ToString("g")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.InventoryId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</p>
