@model MedicineStore.Models.Inventory
@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>Delete Inventory Record</h2>

<h4>Are you sure you want to delete this?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.InventoryId</dd>

        <dt class="col-sm-2">Medicine</dt>
        <dd class="col-sm-10">@Model.Medicine?.MedicineName</dd>

        <dt class="col-sm-2">Quantity On Hand</dt>
        <dd class="col-sm-10">@Model.QuantityOnHand</dd>

        <dt class="col-sm-2">Expiry Date</dt>
        <dd class="col-sm-10">@Model.ExpiryDate?.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InventoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
