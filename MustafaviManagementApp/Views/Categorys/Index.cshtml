@model IEnumerable<MedicineStore.Models.Category>
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Category List</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>
<table class="table table-striped" data-search>
    <thead>
        <tr>
            <th>CategoryName</th><th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td><td>@item.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
