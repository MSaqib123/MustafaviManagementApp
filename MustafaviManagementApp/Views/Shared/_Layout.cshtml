
    

@{
    var title = ViewData["Title"] as string ?? "MedicineStore";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - MedicineStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- _Layout.cshtml  (inside <head>) -->
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 ps-4">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Mustafavi MS</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">

                <!-- Master Data --------------------------------------------------->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="masterMenu" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        Master&nbsp;Data
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="masterMenu">
                        <li><a class="dropdown-item" asp-controller="Staffs" asp-action="Index">Staffs</a></li>
                        <li><a class="dropdown-item" asp-controller="Stores" asp-action="Index">Stores</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="ParentCategories" asp-action="Index">Brands</a></li>
                        <li><a class="dropdown-item" asp-controller="Categorys" asp-action="Index">Categories</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="CategorysParentCategory" asp-action="Index">
                                Map Brand ↔ Category
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Inventory & Products ------------------------------------------>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="productMenu" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        Products
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="productMenu">
                        <li><a class="dropdown-item" asp-controller="Medicines" asp-action="Index">Medicines</a></li>
                        <li><a class="dropdown-item" asp-controller="Inventorys" asp-action="Index">Inventory</a></li>
                    </ul>
                </li>

                <!-- Transactions --------------------------------------------------->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="txMenu" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        Transactions
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="txMenu">
                        <li><a class="dropdown-item" asp-controller="Sales" asp-action="Index">Sales</a></li>
                        <li><a class="dropdown-item" asp-controller="Purchases" asp-action="Index">Purchases</a></li>
                        <li><a class="dropdown-item" asp-controller="Payments" asp-action="Index">Payments</a></li>
                    </ul>
                </li>

                <li><a class="nav-link" asp-controller="POS" asp-action="Index">POS</a></li>

                <!-- Parties -------------------------------------------------------->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="partyMenu" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        Parties
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="partyMenu">
                        <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index">Customers</a></li>
                        <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index">Suppliers</a></li>
                        <li><a class="dropdown-item" asp-controller="Prescriptions" asp-action="Index">Prescriptions</a></li>
                    </ul>
                </li>

                <!-- Reports -------------------------------------------------------->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdvancedStockLedgerReports" asp-action="Index">Reports</a>
                </li>
            </ul>
        </div>
    </header>


    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-4 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year — MedicineStore
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.2/dist/axios.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


