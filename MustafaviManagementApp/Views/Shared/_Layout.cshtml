@{
    var title = ViewData["Title"] as string ?? "MedicineStore";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - MedicineStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 ps-4">
            <a class="navbar-brand" asp-controller="Stores" asp-action="Index">MedicineStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="DailySummarys" asp-action="Index">DailySummarys</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Staffs" asp-action="Index">Staffs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Stores" asp-action="Index">Stores</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Categorys" asp-action="Index">Category</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Medicines" asp-action="Index">Medicines</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index">Customer</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Sales" asp-action="Index">Sales</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="SaleDetails" asp-action="Index">SaleDetails</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Suppliers" asp-action="Index">Suppliers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Purchases" asp-action="Index">Purchases</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="PurchaseDetails" asp-action="Index">PurchaseDetail</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Prescriptions" asp-action="Index">Prescriptions</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="PaymentDetails" asp-action="Index">PaymentDetails</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Inventorys" asp-action="Index">Inventorys</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="POS" asp-action="Index">POS</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="DailySummaries" asp-action="Index">Reports</a></li>
                </ul>
            </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-4 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year â€” MedicineStore
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.2/dist/axios.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
