@model IEnumerable<MedicineStore.Models.SaleDetail>

<h3>Sale #@ViewContext.RouteData.Values["id"] – Line Items</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().SaleDetailId)</th>
            <th>Medicine</th>
            <th>@Html.DisplayNameFor(m => m.First().Quantity)</th>
            <th>@Html.DisplayNameFor(m => m.First().UnitPrice)</th>
            <th>@Html.DisplayNameFor(m => m.First().Discount)</th>
            <th>SubTotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.SaleDetailId</td>
                <td>@d.Medicine.MedicineName</td>
                <td>@d.Quantity</td>
                <td>@d.UnitPrice:F2</td>
                <td>@d.Discount:F2</td>
                <td>@((d.Quantity * d.UnitPrice - d.Discount))</td>
                @* <td>
                    <a asp-controller="SaleDetails" asp-action="Edit" asp-route-id="@d.SaleDetailId">Edit</a> |
                    <a asp-controller="SaleDetails" asp-action="Details" asp-route-id="@d.SaleDetailId">Details</a> |
                    <a asp-controller="SaleDetails" asp-action="Delete" asp-route-id="@d.SaleDetailId">Delete</a>
                </td> *@
            </tr>
        }
    </tbody>
</table>
