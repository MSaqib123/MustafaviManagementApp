    @model MedicineStore.Models.DailySummary
    @{
        ViewData["Title"] = "Delete DailySummary";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <h2>Delete DailySummary</h2>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
    <dt class='col-sm-3'>SummaryDate</dt><dd class='col-sm-9'>@Model.SummaryDate</dd>
<dt class='col-sm-3'>TotalSales</dt><dd class='col-sm-9'>@Model.TotalSales</dd>
<dt class='col-sm-3'>TotalPurchases</dt><dd class='col-sm-9'>@Model.TotalPurchases</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DailySummaryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
