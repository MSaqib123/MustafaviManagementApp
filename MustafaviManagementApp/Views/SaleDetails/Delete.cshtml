@model MedicineStore.Models.SaleDetail
@{
    ViewData["Title"] = "Delete Sale Detail";
}

<h2>Delete Sale Detail</h2>

<h4>Are you sure you want to delete this sale detail?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.SaleDetailId</dd>

        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@Model.Sale?.SaleId</dd>

        <dt class="col-sm-2">Medicine</dt>
        <dd class="col-sm-10">@Model.Medicine?.MedicineName</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice.ToString("F2")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SaleDetailId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
