@model MedicineStore.Models.PaymentDetail
@{
    ViewData["Title"] = "Delete Payment Detail";
}

<h2>Delete Payment Detail</h2>

<h4>Are you sure you want to delete this payment detail?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Detail Id</dt>
        <dd class="col-sm-10">@Model.PaymentDetailId</dd>

        <dt class="col-sm-2">Payment Id</dt>
        <dd class="col-sm-10">@Model.PaymentId</dd>

        <dt class="col-sm-2">Amount Paid</dt>
        <dd class="col-sm-10">@Model.AmountPaid.ToString("F2")</dd>

        <dt class="col-sm-2">Paid At</dt>
        <dd class="col-sm-10">@Model.PaidAt.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PaymentDetailId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
