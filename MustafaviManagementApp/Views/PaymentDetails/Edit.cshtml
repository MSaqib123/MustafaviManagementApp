@model MedicineStore.Models.PaymentDetail
@{
    ViewData["Title"] = "Edit Payment Detail";
}

<h2>Edit Payment Detail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PaymentDetailId" />
    <div class="form-group">
        <label asp-for="PaymentId">Payment</label>
        <select asp-for="PaymentId" class="form-control"
                asp-items="@(ViewBag.Payments as SelectList)">
            <option value="">-- Select Payment --</option>
        </select>
        <span asp-validation-for="PaymentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <input asp-for="PaymentMethod" class="form-control" />
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AmountPaid"></label>
        <input asp-for="AmountPaid" class="form-control" />
        <span asp-validation-for="AmountPaid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaidAt"></label>
        <input asp-for="PaidAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="PaidAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note"></label>
        <input asp-for="Note" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
