@model MedicineStore.Models.Payment
@{
    ViewData["Title"] = "Delete Payment";
}

<h2>Delete Payment</h2>

<h4>Are you sure you want to delete this payment?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Payment Id</dt>
        <dd class="col-sm-10">@Model.PaymentId</dd>

        <dt class="col-sm-2">Reference</dt>
        <dd class="col-sm-10">@Model.ReferenceType @Model.ReferenceId</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("F2")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>
